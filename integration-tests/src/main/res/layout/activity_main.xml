<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iterable SDK Integration Tests"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Scenarios"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPushNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/push_notification_test"
                android:layout_marginBottom="8dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInAppMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/in_app_message_test"
                android:layout_marginBottom="8dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEmbeddedMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/embedded_message_test"
                android:layout_marginBottom="8dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeepLinking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deep_link_test"
                android:layout_marginBottom="8dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCampaignTrigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Campaign Trigger Test"
                android:layout_marginBottom="8dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automated Testing"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRunAllTests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/run_all_tests"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvApiKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API Key: [Configured]"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:gravity="center" />

</LinearLayout> 