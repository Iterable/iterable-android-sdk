<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/small_margin"
    android:background="@drawable/embedded_message_border"
    android:orientation="vertical"
    tools:context=".embedded.IterableEmbeddedViewFragment">

    <TextView
        android:id="@+id/embeddedMessageBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/small_margin"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/embedded_message_body"
        android:textSize="@dimen/embedded_message_body_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/flexMessageButton"
        app:layout_constraintEnd_toStartOf="@+id/embeddedMessageImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/embeddedMessageImage" />

    <Button
        android:id="@+id/embeddedMessageButton"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/embedded_message_button_text"
        app:layout_constraintBottom_toBottomOf="@+id/embeddedMessageImage"
        app:layout_constraintEnd_toStartOf="@+id/embeddedMessageImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flexMessageBody" />

    <ImageView
        android:id="@+id/embeddedMessageImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/embedded_message_image_description"
        android:src="@drawable/coffee_cappuccino"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>